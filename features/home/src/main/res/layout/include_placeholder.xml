<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/plu_size_04">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_placeholder"
        android:layout_width="@dimen/plu_size_20"
        android:layout_height="@dimen/plu_size_20"
        android:layout_marginBottom="@dimen/plu_size_02"
        android:alpha="0.50"
        android:src="@drawable/plu_illu_gardener_seed"
        app:layout_constraintBottom_toTopOf="@id/text_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="@color/plu_placeholder" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_placeholder"
        style="@style/PlutoTextLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/plu_size_02"
        android:gravity="center"
        android:text="@string/empty_garden_prompt"
        android:textColor="@color/plu_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_placeholder"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>
